<% publish_to @path do %>
    var id = "<%= @chat.id %>";
    var chatbox = $("#chatbox_" + id);

    chatbox.append("<%= j render( partial: @message ) %>");
    chatbox.scrollTop(chatbox[0].scrollHeight);

    chatBox.chatWith(id);
    chatbox.children().last().removeClass("self").addClass("other");        
    chatbox.scrollTop(chatbox[0].scrollHeight);
    chatBox.notify();
<% end %>