<% content_for :header do %>
  <%= javascript_include_tag 'chat' %> 
  <%= javascript_include_tag 'utcTimeConverter' %>  
<% end %>

<%= link_to 'Back to Event Index', events_path, :class=>"clear block"%>
<h1 class="clear">Event:</h1>
<div id="drinkup_listing" class="container">
<div id="drinkup_details_partial">
  <div class="drinkup_detail"><h4>Drinkup Name: </h4><p id="drinkup_name"><%= @event.name%></p></div>
  <div class="drinkup_detail"><h4>Location: </h4><p id="drinkup_location_name"><%= @event.place_name%></p></div>
  <div class="drinkup_detail"><h4>Address: </h4><p id="drinkup_location_address"><%= @event.place_address%></p></div>
  <div class="drinkup_detail"><h4>Start Time: </h4><p id="drinkup_start_time"><%= @event.start_time%></p></div>
  <div class="drinkup_detail"><h4>End Time: </h4><p id="drinkup_end_time"><%= @event.end_time%></p></div>
  <div class="drinkup_detail"><h4>Top Conversations: </h4><div id="drinkup_conversations"></div></div>
</div>
</div>
<p><strong>Attendees: </strong></p>
<% @event.attendees.each do |attendee| %>
<p><%= link_to("#{attendee.user.first_name} #{attendee.user.last_name}", user_path(attendee.user)) if attendee.is_attending %></p>
<% end %>

<%= link_to 'Edit', edit_event_path(@event) if @creator_status %>
<%= link_to 'Destroy', event_path(@event),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this event?' }  if @creator_status  %>


<div class="chat col-md-6 col-md-offset-3">
  <div class="chatboxcontent" id="chatbox_<%= @chat.id %>">
      <% if @messages.any? %>
          <%= render @messages %>
      <% end %>
  </div>
  <div class="chatboxinput">
      <%= form_for([@chat, @message], :remote=> true, :html => {id: "chat_form_# {@chat.id}"}) do |f| %>
      <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @chat.id %>
      <div class="chat-form-btns" >    
          <%= f.submit "send", class: "btn btn-primary btn-sm btn-submit"%>
      </div>
    <% end %>
  <div>
</div>
<%= subscribe_to chat_path(@chat) %>

